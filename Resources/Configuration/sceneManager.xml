<?xml version="1.0" encoding="UTF-8"?>
<sceneManager>
	<!-- IMPORTANT! toate tagurile si atributele de tip comment trebuie ignorate (nu le parsati)
	le-am adaugat ca sa evit cazul de comentarii imbricate (imposibile in XML) -->
	<gameName>My game engine</gameName>
	<defaultScreenSize>
		<width>960</width>
		<height>720</height>
		<!--
		se mai poate pune si:
		<fullscreen />
		-->
	</defaultScreenSize>
	<backgroundColor>
		<r>0.0</r>
		<g>0.0</g>
		<b>0.0</b>
	</backgroundColor>
	<fog>
		<r>400</r>
		<R>700</R>
		<fogColor>
			<r>0.50</r>
			<g>0.55</g>
			<b>0.60</b>
		</fogColor>
	</fog>
	<controls>
		<control>
			<key>W</key>
			<action>MOVE_CAMERA_POSITIVE_Z</action>
		</control>
		<control>
			<key>S</key>
			<action>MOVE_CAMERA_NEGATIVE_Z</action>
		</control>
		<control>
			<key>Q</key>
			<action>ROTATE_CAMERA_CW_Y</action>
		</control>
		<control>
			<key>E</key>
			<action>ROTATE_CAMERA_CCW_Y</action>
		</control>
		<control>
			<key>D</key>
			<action>MOVE_CAMERA_POSITIVE_X</action>
		</control>
		<control>
			<key>A</key>
			<action>MOVE_CAMERA_NEGATIVE_X</action>
		</control>
		<!-- adaugati restul -->
	</controls>
	
	
	<cameras>
		<camera id="1">
			<comment>elemntul type este folosit doar in taskul optional cu tipurile de Camera </comment>
			<type>firstPerson</type>
			<position>
				<x>0</x>
				<y>0</y>
				<z>1</z>
			</position>
			<target>
				<x>0</x>
				<y>0</y>
				<z>-1</z>
			</target>
			<up>
				<x>0</x>
				<y>1</y>
				<z>0</z>
			</up>
			<translationSpeed>50</translationSpeed>
			<rotationSpeed>50</rotationSpeed>
			<fov>45</fov>
			<near>0.2</near>
			<far>10000</far>
		</camera>
		<!-- eventual si alte cameras -->
	</cameras>
	<activeCamera>1</activeCamera>

	
	<objects>
		<comment>in interiorul elementelor model, shader, texture, se gaseste id-ul corespunzator resursei din sceneManager.xml
		Elementul position se refera practic la translatia obiectului.
		</comment>

		<object id="8">
			<model>generated</model>
			<shader>3</shader>
			<type>terrain</type>
			<name>Teren</name>
